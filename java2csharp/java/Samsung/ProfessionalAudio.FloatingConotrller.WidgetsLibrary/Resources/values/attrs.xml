<?xml version="1.0" encoding="utf-8"?>
<resources>

    
    <declare-styleable name="FloatingControler">
        <!-- Sets on which edge of JamControl the controlbar is set initially -->
        <attr name="bar_alignment" format="enum">
            <!-- Controlbar on top of JamControl --><enum name="top" value="0" />
            <!-- Controlbar on right of JamControl --><enum name="right" value="1" />
            <!-- Controlbar on left of JamControl --><enum name="left" value="2" />
            <!-- Controlbar on bottom of JamControl --><enum name="bottom" value="3" />
            <!-- Controlbar on top right of JamControl --><enum name="topRight" value="4" />
            <!-- Controlbar on bottom right of JamControl --><enum name="bottomRight" value="5" />
            <!-- Controlbar on bottom left of JamControl --><enum name="bottomLeft" value="6" />
            <!-- Controlbar on top left of JamControl --><enum name="topLeft" value="7" />
        </attr>
        <attr name="orientation" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="0"/>
        </attr>
        <attr name="type" format="enum">
            <enum name="center_on_edges" value="0" />
            <enum name="in_corners" value="1"/>
        </attr>
        <attr name="bar_thickness" format="dimension"/>
        <attr name="handle_drawable" format="reference"/>
        <attr name="open_btn_style" format="reference"/>
    </declare-styleable>
    <declare-styleable name="FcRecycleView" >
        <attr name="max_width" format="reference" />
    </declare-styleable>
   <!-- Reference for style of FloatingController view -->
    <attr name="floating_controller_style" format="reference" />
    <attr name="mainl" format="reference" />
    <attr name="main_margin" format="dimension"/>
    <attr name="content_style" format="reference"/>
    <attr name="numberIconWidthAsPercentOfAppIcon" format="integer"/>
    <attr name="numberIconHeightAsPercentOfAppIcon" format="integer"/>
    <item name="current_layout" type="layout">"?attr/mainl"</item>
</resources>
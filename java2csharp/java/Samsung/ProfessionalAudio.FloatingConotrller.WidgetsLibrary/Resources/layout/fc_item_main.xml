<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginEnd="@dimen/main_app_action_layout_margin_end"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/device_root_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/main_app_root_layout_margin_bottom"
        android:layout_marginTop="@dimen/main_app_root_layout_margin_top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/device_action_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/main_app_action_layout_margin_start"
            android:background="@drawable/floating_controller_actions_group_frame"
            android:orientation="horizontal"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/device_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/main_app_action_layout_margin_start"
            android:background="@drawable/floating_controller_actions_group_frame"
            android:orientation="horizontal"
            android:visibility="gone"/>

        <!-- not used as for now -->
        <LinearLayout
            android:id="@+id/device_volumes_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/main_app_action_layout_margin_start"
            android:background="@drawable/floating_controller_actions_group_frame"
            android:orientation="horizontal"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
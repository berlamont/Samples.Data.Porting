<?xml version="1.0" encoding="utf-8"?>
<!--
  Drawable use level lists for handling different orientations
  0 horizontal left to right
  1 horizontal right to left
  2 vertical left to right
  3 vertical right to left (used as bottom to top)
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:drawable="@drawable/bg_floating_controller_bottom_img"
        android:left="6dp"
        android:right="6dp"/>
    <item
        android:bottom="0dp"
        android:left="6dp"
        android:right="6dp">
        <selector>
            <item
                android:drawable="@drawable/bg_btn_press_bottom"
                android:state_pressed="true"/>
        </selector>
    </item>

</layer-list>
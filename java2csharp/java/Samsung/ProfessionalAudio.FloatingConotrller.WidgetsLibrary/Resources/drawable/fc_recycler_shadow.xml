<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="@dimen/floating_controller_height">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />
            <gradient
                android:startColor="#40131313"
                android:endColor="#00000000"
                android:angle="270"
                />
        </shape>
    </item>
    <item
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="@dimen/fc_shadow_height"
        >
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#b7b7b7" />
            <solid android:color="#eeffffff" />
        </shape>
    </item>
</layer-list>
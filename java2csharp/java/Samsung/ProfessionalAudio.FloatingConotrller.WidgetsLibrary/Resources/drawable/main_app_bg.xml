<?xml version="1.0" encoding="utf-8"?>
<!-- Drawable use level lists for handling different orientations
  0 horizontal left to right
  1 horizontal right to left
  2 vertical left to right
  3 vertical right to left (used as bottom to top)-->
<level-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:maxLevel="0"
        android:minLevel="0">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <size
                        android:height="@dimen/default_controlbar_widget"
                        android:width="44dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/btn_floating_controller_right"/>
        </layer-list>
    </item>
    <item
        android:maxLevel="1"
        android:minLevel="1">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <size
                        android:height="@dimen/default_controlbar_widget"
                        android:width="44dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/btn_floating_controller_left"/>
        </layer-list>
    </item>
    <item
        android:maxLevel="2"
        android:minLevel="2">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <size
                        android:height="44dp"
                        android:width="@dimen/default_controlbar_widget" />
                </shape>
            </item>
            <item android:drawable="@drawable/btn_floating_controller_bottom"/>
        </layer-list>
    </item>
    <item
        
        android:maxLevel="3"
        android:minLevel="3">
        <layer-list>
            <item>
                <shape android:shape="rectangle" >
                    <size
                        android:height="44dp"
                        android:width="@dimen/default_controlbar_widget" />
                </shape>
            </item>
            <item android:drawable="@drawable/btn_floating_controller_top"/>
        </layer-list>
    </item>

</level-list>